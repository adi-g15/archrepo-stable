# Maintainer: rajan pandey <pandey11rajan@gmail.com>
pkgname=heera-kwin-plugins
pkgver=v1.0
pkgrel=1
pkgdesc="Heera Kwin Plugins"
arch=('x86_64')
url="https://github.com/heera-os/heera-kwin-plugins.git"
license=('GPL3')
groups=('heera')
depends=('kwin')
makedepends=('git' 'cmake' 'extra-cmake-modules' 'gcc' 'ninja')
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("${pkgname}::git+${url}")
md5sums=('SKIP')

pkgver() {
        cd "$srcdir/${pkgname}"

	printf "%s" "$(git describe)"
}

prepare() {
	cd "$srcdir/${pkgname}"
	
	git checkout $(git describe)
}

build() {
	cd "$srcdir/${pkgname}"
        mkdir -p build && cd build
        rm -f CMakeCache.txt
	cmake \
		-G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		..
	cmake --build .
}

package() {
	cd "$srcdir/${pkgname}"
        cd build
	DESTDIR="$pkgdir/" cmake --install .
}

