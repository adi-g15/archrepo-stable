# Maintainer: rajan pandey <pandey11rajan@gmail.com>
pkgname=heera-icon-theme
pkgver=v1.0
pkgrel=1
pkgdesc="heera Icons"
arch=('any')
url="https://github.com/heera-os/heera-icon-theme.git"
license=('GPL3')
groups=('heera')
depends=()
makedepends=('git' 'cmake')
provides=("${pkgname}")
conflicts=("${pkgname}")
options=('!strip')
source=("${pkgname}::git+${url}")
md5sums=('SKIP')

pkgver() {
        cd "$srcdir/${pkgname}"

	printf "%s" "$(git describe)"
}

build() {
	cd "$srcdir/${pkgname}"
        mkdir -p build && cd build
        rm -f CMakeCache.txt
	cmake \
		-G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		..
	cmake --build .
}

package() {
	cd "$srcdir/${pkgname}"
        cd build
	DESTDIR="$pkgdir/" cmake --install .
}

