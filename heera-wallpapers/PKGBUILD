# Maintainer: rajan pandey <pandey11rajan@gmail.com>
pkgname=heera-wallpapers
pkgver=v1.0
pkgrel=1
pkgdesc="heera Wallpapers"
arch=('any')
url="https://github.com/heera-os/heera-wallpapers.git"
license=('GPL3')
groups=('heera')
depends=()
makedepends=('git' 'cmake' 'extra-cmake-modules' 'gcc' 'ninja')
provides=("${pkgname}")
conflicts=("${pkgname}")
options=('!strip')
source=("${pkgname}::git+${url}")
md5sums=('SKIP')

pkgver() {
        cd "$srcdir/${pkgname}"

	printf "%s" "$(git describe)"
}

prepare() {
	cd "$srcdir/${pkgname}"
	
	git checkout $(git describe)
}

build() {
	cd "$srcdir/${pkgname}"
        mkdir -p build && cd build
        rm -f CMakeCache.txt
	cmake \
		-G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		..
	cmake --build .
}

package() {
	cd "$srcdir/${pkgname}"
        cd build
	DESTDIR="$pkgdir/" cmake --install .
}

